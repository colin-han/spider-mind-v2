# 敏感配置模板
# 复制此文件为 environments.secrets.yaml 并填入实际值
# cp environments.secrets.yaml.example environments.secrets.yaml

# ============================================
# 公共敏感配置 - 所有环境共享
# ============================================
common:
  env:
    # AI API 密钥 - 至少配置一个
    OPENAI_API_KEY: "sk-..."
    DEEPSEEK_API_KEY: "sk-..."
    # ANTHROPIC_API_KEY: "sk-ant-..."
    # MOONSHOT_API_KEY: "sk-..."
    # QWEN_API_KEY: "sk-..."

# ============================================
# 本地开发环境
# 注意: 使用 Docker Supabase,密钥已在 environments.yaml 中
# ============================================
local:
  env: {}

# ============================================
# 开发环境 (远程 Supabase)
# 从 Supabase Dashboard → Settings 获取
# ============================================
development:
  env:
    # API → anon public key
    NEXT_PUBLIC_SUPABASE_ANON_KEY: "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."

    # API → service_role secret key
    SUPABASE_SERVICE_ROLE_KEY: "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."

    # Settings → General → Reference ID
    SUPABASE_PROJECT_REF: "your-project-ref"

    # Settings → Database → Database Password
    SUPABASE_DB_PASSWORD: "your-db-password"

# ============================================
# 生产环境
# 注意: 生产环境应该从 Vercel Dashboard 配置
# 本地仅用于测试
# ============================================
production:
  env:
    NEXT_PUBLIC_SUPABASE_ANON_KEY: "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
    SUPABASE_SERVICE_ROLE_KEY: "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
    SUPABASE_PROJECT_REF: "your-prod-project-ref"
    SUPABASE_DB_PASSWORD: "your-prod-db-password"
