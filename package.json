{
  "name": "spider-mind-v2",
  "version": "0.1.0",
  "private": true,
  "description": "Spider Mind v2 - 智能知识管理和思维导图应用",
  "author": "Colin <biz@colinhan.info>",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "dev:turbo": "next dev --turbo",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start",
    "export": "next export",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "lint:staged": "lint-staged",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathIgnorePatterns=tests/e2e",
    "test:clear-cache": "jest --clearCache",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:install": "playwright install",
    "test:e2e:codegen": "playwright codegen",
    "test:all": "yarn test:unit && yarn test:e2e",
    "validate": "yarn lint && yarn type-check && yarn test:unit",
    "validate:full": "yarn validate && yarn test:e2e",
    "clean": "rm -rf .next out coverage test-results playwright-report node_modules/.cache",
    "clean:deps": "rm -rf node_modules yarn.lock && yarn install",
    "prepare": "husky install",
    "postinstall": "yarn test:e2e:install",
    "dev:setup": "./scripts/dev-setup.sh",
    "dev:check": "node scripts/check-env.js",
    "db:types": "mkdir -p lib/types && (supabase gen types typescript --local > lib/types/supabase.ts.tmp 2>/dev/null && mv lib/types/supabase.ts.tmp lib/types/supabase.ts || echo 'Supabase项目未初始化，保留当前类型定义')",
    "db:reset": "supabase db reset",
    "db:start": "supabase start",
    "db:stop": "supabase stop",
    "db:status": "supabase status"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.45.4",
    "next": "^15.0.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "@playwright/test": "^1.55.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "lint-staged": "^16.1.6",
    "playwright": "^1.55.0",
    "postcss": "^8.4.31",
    "prettier": "^3.6.2",
    "supabase": "^1.200.3",
    "tailwindcss": "^3.3.5",
    "ts-jest": "^29.4.1",
    "typescript": "^5.5.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  },
  "packageManager": "yarn@1.22.22",
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "tsc --noEmit"
    ],
    "*.{js,jsx,json,md,css}": [
      "prettier --write"
    ]
  },
  "volta": {
    "yarn": "1.22.22",
    "node": "24.2.0"
  }
}
