# Supabase Configuration
# 在 Supabase Dashboard 中可以找到这些值: https://app.supabase.com/project/_/settings/api

# Project URL - 你的 Supabase 项目 URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Anon Key - 公开匿名密钥，用于客户端操作
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Service Role Key - 服务端操作密钥 (仅服务端使用，不要暴露给客户端)
# 仅在需要执行绕过 RLS 的操作时使用
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database URL (可选) - 用于直接数据库连接
DATABASE_URL=postgresql://postgres:[password]@db.[project-id].supabase.co:5432/postgres

# Node Environment
NODE_ENV=development

# 开发服务器端口 (默认: 13000)
PORT=13000

# Next.js Configuration
# 应用基础 URL (生产环境中需要设置为实际域名)
NEXT_PUBLIC_SITE_URL=http://localhost:${PORT}
